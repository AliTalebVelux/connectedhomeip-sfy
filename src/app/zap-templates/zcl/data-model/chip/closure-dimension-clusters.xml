<configurator>
  <domain name="CHIP"/>

  <cluster>
    <name>Closure [cluster_short_lower] Dimension</name>
    <domain>Closures</domain>
    <description>Description of the [cluster_short_lower] Closure's element</description>
    <code>[cluster_id]</code>

    <define>CLOSURE_[cluster_short_upper]_DIMENSION_CLUSTER</define>

    <client tick="false" init="false">true</client>
    <server tick="false" init="false">true</server>

    <globalAttribute side="either" code="0xFFFD" value="1"/>

    <features>
      <feature bit="0" code="PS" name="Positioning" summary="Supports Positioning"/>
      <feature bit="1" code="LT" name="Latching" summary="Supports a Latch"/>
      <feature bit="2" code="UT" name="Unit" summary="Supports additional data"/>
      <feature bit="3" code="LM" name="Limitation" summary="Supports limitation of the operating range"/>
      <feature bit="4" code="SP" name="Speed" summary="Supports speed motion throttling"/>
      <feature bit="5" code="TR" name="Translation" summary="Drives a translation motion"/>
      <feature bit="6" code="RO" name="Rotation" summary="Drives a rotation motion"/>
      <feature bit="7" code="MD" name="Modulation" summary="Modulates a particular flow level"/>
    </features>

    <attribute side="server" code="0x0000" define="CURRENT_POSITIONING"   optional="true" writable="false" type="PositioningBitmap" isNullable="true">CurrentPositioning</attribute>
    <attribute side="server" code="0x0001" define="TARGET_POSITIONING"    optional="true" writable="false" type="PositioningBitmap" isNullable="true">TargetPositioning</attribute>
    <attribute side="server" code="0x0002" define="RESOLUTION"            optional="true" writable="false" type="percent100ths">Resolution</attribute>
    <attribute side="server" code="0x0003" define="STEP_VALUE"            optional="true" writable="false" type="percent100ths">StepValue</attribute>
    <attribute side="server" code="0x0004" define="UNIT"                  optional="true" writable="false" type="UnitEnum">Unit</attribute>
    <attribute side="server" code="0x0005" define="RANGE"                 optional="true" writable="false" type="SignedValuesRangeStruct">Range</attribute>
    <attribute side="server" code="0x0006" define="LIMIT_RANGE"           optional="true" writable="false" type="RangePercent100thsStruct" isNullable="true">LimitRange</attribute>
    <attribute side="server" code="0x0007" define="TRANSLATION_DIRECTION" optional="true" writable="false" type="TranslationDirectionEnum">TranslationDirection</attribute>
    <attribute side="server" code="0x0008" define="ROTATION_AXIS"         optional="true" writable="false" type="RotationAxisEnum">RotationAxis</attribute>
    <attribute side="server" code="0x0009" define="OVERFLOW"              optional="true" writable="false" type="OverFlowEnum">OverFlow</attribute>
    <attribute side="server" code="0x000A" define="MODULATION_TYPE"       optional="true" writable="false" type="ModulationTypeEnum">ModulationType</attribute>
    <attribute side="server" code="0x000B" define="CURRENT_LATCHING"      optional="true" writable="false" type="LatchingEnum" isNullable="true">CurrentLatching</attribute>
    <attribute side="server" code="0x000C" define="TARGET_LATCHING"       optional="true" writable="false" type="LatchingEnum" isNullable="true">TargetLatching</attribute>
    <attribute side="server" code="0x000D" define="LATCHING_AXIS"         optional="true" writable="false" type="LatchingAxisEnum">LatchingAxis</attribute>

    <command source="client" code="0x00" name="SetPositioning" optional="false">
      <arg optional="true" name="Target"         type="PositioningBitmap"/>
      <arg optional="true" name="Position"       type="percent100ths"/>
      <arg optional="true" name="Speed"          type="ThreeLevelAutoEnum"/>
    </command>
    <command source="client" code="0x01" name="Steps" optional="false">
      <arg optional="false" name="Direction"     type="StepDirectionEnum"/>
      <arg optional="false" name="NumberOfSteps" type="int16u"/>
      <arg optional="true"  name="Speed"         type="ThreeLevelAutoEnum"/>
    </command>
    <command source="client" code="0x02" name="Latch" optional="true">
      <description>Latch (secure) a Closure's element.</description>
    </command>
    <command source="client" code="0x03" name="UnLatch" optional="true">
      <description>UnLatch (unsecure) a Closure's element.</description>
    </command>
  </cluster>
</configurator>
