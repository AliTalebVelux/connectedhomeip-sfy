<configurator>
  <domain name="CHIP"/>

  <cluster>
    <name>Closure Operational State</name>
    <domain>Closures</domain>
    <code>0x0CD0</code>
    <define>OPERATIONAL_STATE_CLOSURE_CLUSTER</define>
    <description>Attributes and commands for driving Closures.</description>
    <globalAttribute side="either" code="0xFFFD" value="1"/>

    <features>
      <!-- Check with Base Cluster the scope of Features offset for the Base vs Derived -->
      <feature bit="0" code="SP" name="Speed" summary="Supports the speed feature."/>
      <feature bit="1" code="CL" name="Calibration" summary="Supports the calibration feature."/>
      <feature bit="2" code="PT" name="Protection" summary="Supports the protection feature."/>
      <feature bit="3" code="MO" name="ManuallyOperable" summary="Supports the manual operation feature."/>
      <feature bit="4" code="AB" name="AutomaticBehavior" summary="Supports the automatic behavior feature."/>
    </features>

    <!-- Base Cluster's Attributes -->
    <attribute side="server" code="0x0000" writable="false" define="PHASE_LIST"             type="array"     entryType="char_string" isNullable="true" optional="false">PhaseList</attribute>
    <attribute side="server" code="0x0001" writable="false" define="CURRENT_PHASE"          type="int8u"     min="0" max="4"         isNullable="true" optional="false">CurrentPhase</attribute>
    <attribute side="server" code="0x0002" writable="false" define="COUNTDOWN_TIME"         type="elapsed_s" min="0" max="259200"    isNullable="true" optional="true">CountdownTime</attribute>
    <attribute side="server" code="0x0003" writable="false" define="OPERATIONAL_STATE_LIST" type="array"     entryType="OperationalStateStruct"        optional="false">OperationalStateList</attribute>
     <!-- Type of this attribute in the spec is OperationalStateEnum, uses ENUM8 for the type, so it allows Base+Derived Clusters values -->
    <attribute side="server" code="0x0004" writable="false" define="OPERATIONAL_STATE"      type="enum8"                                               optional="false">OperationalState</attribute>
    <attribute side="server" code="0x0005" writable="false" define="OPERATIONAL_ERROR"      type="ErrorStateStruct"                                    optional="false">OperationalError</attribute>
    <!-- This Derived Cluster's Attributes -->
    <attribute side="server" code="0x4000" writable="false" define="OVERALL_STATE"          type="OverallStateBitmap"  default="0" optional="false">OverallState</attribute>
    <attribute side="server" code="0x4001" writable="false" define="PROTECTIVE_STATE"       type="ProtectiveStateEnum" default="0" optional="true">ProtectiveState</attribute>
    <attribute side="server" code="0x4002" writable="true"  define="AUTO_BEHAVIOR"          type="AutoBehaviorEnum"    default="0" optional="true">
      <description>AutoBehavior</description>
      <access op="read" privilege="view"/>
      <access op="write" privilege="operate"/>
    </attribute>
    <attribute side="server" code="0x4003" writable="true"  define="AUTO_TIMER"             type="elapsed_s" min="0" max="259200" default="0" optional="true">
      <description>AutoTimer</description>
      <access op="read" privilege="view"/>
      <access op="write" privilege="operate"/>
    </attribute>

    <!-- Base Cluster's Commands -->
    <!-- This Derived Cluster's Commands -->
    <command source="client" code="0x40" name="MoveToTag" optional="false"/>
    <command source="client" code="0x41" name="Calibrate" optional="true"/>
  </cluster>

</configurator>
