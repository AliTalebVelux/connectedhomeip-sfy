<configurator>
  <domain name="CHIP"/>
  <cluster>
    <name>Closure Operational State</name>
    <domain>Closures</domain>
    <code>0x0CD0</code>
    <define>OPERATIONAL_STATE_CLOSURE_CLUSTER</define>
    <description>Attributes and commands for driving Closures.</description>
    <globalAttribute side="either" code="0xFFFD" value="1"/>

    <features>
      <!-- Check with Base Cluster the scope of Features offset for the Base vs Derived -->
      <!-- Base Cluster Features start @ bit #0 -->
      <!-- No Feature Declared -->
      <!-- Derived Cluster Features start @ bit #8 -->
      <feature bit="8"  code="PS" name="Positioning"             summary="Supports the Positioning feature."/>
      <feature bit="9"  code="LT" name="Latching"                summary="Supports the Latching feature."/>
      <feature bit="10" code="IP" name="IntermediatePositioning" summary="Supports the IntermediatePositioning feature."/>
      <feature bit="11" code="SP" name="Speed"                   summary="Supports the Speed feature."/>
      <feature bit="12" code="VT" name="Ventilation"             summary="Supports the Ventilation feature."/>
      <feature bit="13" code="PD" name="Pedestrian"              summary="Supports the Pedestrian feature."/>
      <feature bit="14" code="CL" name="Calibration"             summary="Supports the Calibration feature."/>
      <feature bit="15" code="PT" name="Protection"              summary="Supports the Protection feature."/>
      <feature bit="16" code="MO" name="ManuallyOperable"        summary="Supports the manual operation feature."/>
      <feature bit="17" code="FB" name="Fallback"                summary="Supports the Fallback feature."/>
    </features>

    <!-- Base Cluster's Attributes -->
    <attribute side="server" code="0x0000" writable="false" define="PHASE_LIST"             type="array"     entryType="char_string" isNullable="true" optional="false">PhaseList</attribute>
    <attribute side="server" code="0x0001" writable="false" define="CURRENT_PHASE"          type="int8u"     min="0" max="4"         isNullable="true" optional="false">CurrentPhase</attribute>
    <attribute side="server" code="0x0002" writable="false" define="COUNTDOWN_TIME"         type="elapsed_s" min="0" max="259200"    isNullable="true" optional="true">CountdownTime</attribute>
    <attribute side="server" code="0x0003" writable="false" define="OPERATIONAL_STATE_LIST" type="array"     entryType="OperationalStateStruct"        optional="false">OperationalStateList</attribute>
    <!-- Type of this attribute in the spec is OperationalStateEnum, uses ENUM8 for the type, so it allows Base+Derived Clusters values -->
    <attribute side="server" code="0x0004" writable="false" define="OPERATIONAL_STATE"      type="enum8"                                               optional="false">OperationalState</attribute>
    <attribute side="server" code="0x0005" writable="false" define="OPERATIONAL_ERROR"      type="ErrorStateStruct"                                    optional="false">OperationalError</attribute>
    <!-- This Derived Cluster's Attributes -->
    <attribute side="server" code="0x4000" writable="false" define="OVERALL_STATE"          type="OverallStateStruct"   default="0" optional="false">OverallState</attribute>
    <attribute side="server" code="0x4001" writable="false" define="RESTING_PROCEDURE"      type="RestingProcedureEnum" default="0" optional="true">RestingProcedure</attribute>
    <attribute side="server" code="0x4002" writable="false" define="TRIGGER_POSITION"       type="TriggerPositionEnum"  default="0" optional="true">TriggerPosition</attribute>
    <attribute side="server" code="0x4003" writable="false" define="TRIGGER_CONDITION"      type="TriggerConditionEnum" default="0" optional="true">TriggerCondition</attribute>
    <attribute side="server" code="0x4004" writable="false" define="WAITING_DELAY"          type="duration_s" min="0" max="64800" default="0" optional="true">WaitingDelay</attribute>
    <attribute side="server" code="0x4005" writable="false" define="KICKOFF_TIMER"          type="duration_s" min="0" max="64800" default="0" optional="true">KickoffTimer</attribute>

    <!-- Base Cluster's Commands -->
    <command source="client" code="0x01" name="Stop" optional="false"/>
    <!-- This Derived Cluster's Commands -->
    <command source="client" code="0x40" name="MoveTo" optional="false">
      <arg optional="true" name="Tag"   type="TagEnum"/>
      <arg optional="true" name="Latch" type="LatchingEnum"/>
      <arg optional="true" name="Speed" type="ThreeLevelAutoEnum"/>
    </command>
    <command source="client" code="0x41" name="Calibrate" optional="true"/>
    <command source="client" code="0x42" name="ConfigureFallback" optional="true">
      <arg optional="true" name="RestingProcedure" type="RestingProcedureEnum"/>
      <arg optional="true" name="TriggerPosition"  type="TriggerPositionEnum"/>
      <arg optional="true" name="TriggerCondition" type="TriggerConditionEnum"/>
      <arg optional="true" name="WaitingDelay"     type="duration_s"/>
    </command>
    <command source="client" code="0x43" name="SetMultipleAttrs" optional="false"/>
    <command source="client" code="0x44" name="GetMultipleAttrs" optional="false"/>
    <command source="server" code="0x45" name="GetMultipleAttrsResponse" optional="false" disableDefaultResponse="true"/>
  </cluster>

</configurator>
